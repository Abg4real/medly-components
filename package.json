{
    "name": "medly-components",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0",
    "description": "ðŸš€ Simple themable component library using react, styled-components & typescript",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "scripts": {
        "postinstall": "lerna bootstrap",
        "build": "lerna run build",
        "watch": "lerna run --parallel watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "cross-env BABEL_ENV=storybook build-storybook -c .storybook -o .out",
        "deploy-storybook": "cross-env BABEL_ENV=storybook storybook-to-ghpages",
        "commit": "git-cz",
        "create-pack": "lerna exec -- npm pack",
        "link:packages": "lerna link && lerna exec -- yarn link",
        "lint": "run-p -c lint:*",
        "lint:css": "stylelint 'packages/**/src/**/*.tsx'",
        "lint:ts": "tslint -p tsconfig.json",
        "prerelease": "yarn build && lerna version",
        "release": "lerna publish",
        "test": "run-s typecheck test:jest",
        "test:jest": "jest --passWithNoTests --config jest.config.js",
        "test:update": "run-s typecheck \"test:jest -- -u\"",
        "test:watch": "run-s \"typecheck -- -w\" \"test:jest -- --watch\"",
        "typecheck": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gmukul01/component-library-ts-boilerplate.git"
    },
    "keywords": [],
    "author": "Mukul Bansal",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/gmukul01/component-library-ts-boilerplate/issues"
    },
    "homepage": "https://github.com/gmukul01/component-library-ts-boilerplate#readme",
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@babel/core": "7.8.4",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "7.8.3",
        "@babel/plugin-transform-runtime": "7.4.3",
        "@babel/preset-env": "7.8.4",
        "@babel/preset-react": "7.8.3",
        "@babel/preset-typescript": "7.8.3",
        "@mdx-js/loader": "1.5.5",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@storybook/addon-actions": "5.3.8",
