{
    "name": "medly-components",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0",
    "description": "ðŸš€ Simple themable component library using react, styled-components & typescript",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "scripts": {
        "postinstall": "lerna bootstrap",
        "build": "lerna run build",
        "watch": "lerna run --parallel watch",
        "storybook": "start-storybook -p 6006",
        "prestorybook:build": "yarn test:generate-output",
        "storybook:build": "cross-env BABEL_ENV=storybook build-storybook -c .storybook -o .out",
        "prestorybook:deploy": "yarn test:generate-output",
        "storybook:deploy": "cross-env BABEL_ENV=storybook storybook-to-ghpages",
        "commit": "git-cz",
        "link:packages": "lerna link && lerna exec -- yarn link",
        "lint": "run-p -c lint:*",
        "lint:css": "stylelint 'packages/**/src/**/*.tsx'",
        "lint:ts": "eslint 'packages/**/src/**/*.{ts,tsx}'",
        "prerelease": "yarn build && lerna version --exact --conventional-commits --yes",
        "release": "lerna publish from-git --yes",
        "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
        "test": "run-s typecheck test:jest",
        "test:jest": "jest --passWithNoTests --config jest.config.js",
        "test:update": "run-s typecheck \"test:jest -- -u\"",
        "test:watch": "run-s \"typecheck -- -w\" \"test:jest -- --watch\"",
        "typecheck": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gmukul01/component-library-ts-boilerplate.git"
    },
    "keywords": [],
    "author": "Mukul Bansal",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/gmukul01/component-library-ts-boilerplate/issues"
    },
    "homepage": "https://github.com/gmukul01/component-library-ts-boilerplate#readme",
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@babel/compat-data": "7.8.0",
        "@babel/core": "7.8.4",
        "@babel/plugin-transform-runtime": "7.4.3",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-react": "^7.8.7",
        "@babel/preset-typescript": "7.8.3",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/config-lerna-scopes": "^8.3.4",
        "@mdx-js/loader": "1.5.5",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@storybook/addon-actions": "5.3.18",
        "@storybook/addon-docs": "5.3.18",
        "@storybook/addon-jest": "5.3.18",
        "@storybook/addon-knobs": "5.3.18",
        "@storybook/addon-links": "5.3.18",
        "@storybook/addons": "5.3.18",
        "@storybook/react": "5.3.18",
        "@storybook/storybook-deployer": "^2.8.5",
        "@svgr/webpack": "5.1.0",
        "@testing-library/dom": "6.12.2",
        "@testing-library/jest-dom": "4.1.0",
        "@testing-library/react": "9.4.0",
        "@types/jest": "25.1.1",
